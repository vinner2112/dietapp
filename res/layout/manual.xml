<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/manualLayout"
    >
	<Spinner 
        android:id="@+id/manualSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/manualSpinnerPrompt"
    />
    <ViewFlipper android:id="@+id/manualFlipper"
    			android:layout_height="fill_parent"
    			android:layout_width="fill_parent">
    <LinearLayout android:orientation="vertical"
    			  android:layout_width="wrap_content"
    			  android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Enter food name:"></TextView>
    <EditText android:id="@+id/manualFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        /></LinearLayout>
     <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
     <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Enter food calories per serving:"></TextView>
    <EditText android:id="@+id/manualFoodCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        /></LinearLayout>
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
     <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Enter the number of servings you ate:"></TextView>
    <EditText android:id="@+id/manualFoodServings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        /></LinearLayout>
    <Button android:id="@+id/manualFoodButton"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="Save entry"></Button></LinearLayout>
    <LinearLayout android:orientation="vertical"
    			  android:layout_width="wrap_content"
    			  android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Enter excercise name:"></TextView>
    <EditText android:id="@+id/manualExcerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        /></LinearLayout>
     <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
     <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Enter how long you excercised(in minutes):"></TextView>
    <EditText android:id="@+id/manualExcerciseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        /></LinearLayout>
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
     <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Enter the number of calories you burned:"></TextView>
    <EditText android:id="@+id/manualExcerciseCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        /></LinearLayout>
    <Button android:id="@+id/manualExcerciseButton"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="Save entry"></Button></LinearLayout></ViewFlipper>		
</LinearLayout>
